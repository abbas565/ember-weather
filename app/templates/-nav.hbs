<nav class="top-bar">
  <ul class="title-area">
    <li class="name">
      <h1>{{#link-to 'locations'}}Ember Weather{{/link-to}}</h1>
    </li>
    <li class="toggle-topbar menu-icon"><a {{action 'menu'}}><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">
    <!-- Left Nav Section -->
    <ul class="left">
      {{#each model}}
        <li>{{#link-to 'weather' this.id}}{{this.name}}{{/link-to}}</li>
      {{/each}}
    </ul>
    <ul class='right hide-for-small-only'>
      <li>
        {{weather-searchbar transitionToLocation="transitionToSearchedLocationHandler"
                            placeholder="Search for a city anywhere"}}
      </li>
    </ul>
  </section>
</nav>

<div class="current-details">
  <div class="temp-date">
    <div class="temp">
      {{weather.weatherForecast.currently.temperature}}&deg;
    </div>
    <div class="display-date">
      {{displayDate}}
    </div>
  </div>
  <div class="icon-wind">
    <div class="large-icon">
      {{icon-name weather.weatherForecast.currently.icon}}
    </div>
    <div class="wind-direction">
      <span class='speed'>
        {{weather.weatherForecast.currently.windSpeed}}mph
      </span>
      <span class='direction'>
        {{weather-vane windDegrees=weather.weatherForecast.currently.windBearing}}
      </span>
    </div>
  </div>
</div>

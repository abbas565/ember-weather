{{#if location}}
  <div class="title">
    <h3>{{location.name}}</h3>
  </div>
  <div class="temp">
    {{#if weather.temperature}}
      <h3>{{whole-number weather.temperature}}&deg;</h3>
    {{/if}}
  </div>
  <div class="icon">
    {{icon-name weather.icon}}
  </div>
{{else}}
  <h1>No saved locations</h1>
{{/if}}
